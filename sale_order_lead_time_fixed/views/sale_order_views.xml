<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_lead_time" model="ir.ui.view">
        <field name="name">sale.order.form.lead.time.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='other_info']" position="inside">
                <group>
                    <field name="lead_time" readonly="1"/>
                    <field name="expected_delivery_date" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
