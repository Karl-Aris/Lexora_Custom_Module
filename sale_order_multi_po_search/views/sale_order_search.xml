<odoo>
  <record id="view_order_filter_inherit_po_search" model="ir.ui.view">
    <field name="name">sale.order.search.po.multi</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_sales_order_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='purchase_order']" position="replace">
        <filter string="PO#" name="purchase_order" domain="[]" context="{'search_multi_po': True}"/>
      </xpath>
    </field>
  </record>
</odoo>