<odoo>
  <record id="view_helpdesk_ticket_form_inherit_bcc" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.inherit.bcc</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='user_id']" position="after">
        <field name="bcc_partner_ids" widget="many2many_tags" options="{'no_create': True}"/>
      </xpath>
      <xpath expr="//header" position="inside">
        <button name="action_send_bcc_email" type="object"
                string="Send BCC" class="oe_highlight"
                attrs="{'invisible': [('bcc_partner_ids', '=', False)]}"/>
      </xpath>
    </field>
  </record>
</odoo>
