<odoo>
    <record id="view_sale_order_attachment_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.attachment.wizard.form</field>
        <field name="model">sale.order.attachment.wizard</field>
        <field name="arch" type="xml">
            <form string="Download Attachments">
                <group>
                    <field name="sale_order_id" invisible="1"/>
                    <field name="attachment_ids">
                        <tree editable="bottom">
                            <field name="selected"/>
                            <field name="name"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_download_selected" type="object" string="Download Selected" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_order_attachment_download_selectable_fixed.action_sale_order_attachment_wizard" model="ir.actions.act_window">
        <field name="name">Download Attachments</field>
        <field name="res_model">sale.order.attachment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
