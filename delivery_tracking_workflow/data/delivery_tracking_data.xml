<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="server_action_auto_update_delivery" model="ir.actions.server">
        <field name="name">Auto Update Delivery Status</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
action = model.auto_update_delivery_status()
        </field>
    </record>

    <record id="ir_cron_auto_update_delivery" model="ir.cron">
        <field name="name">Auto Update Delivery Status Daily</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.auto_update_delivery_status()</field>
        <field name="interval_type">days</field>
        <field name="interval_number">1</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
