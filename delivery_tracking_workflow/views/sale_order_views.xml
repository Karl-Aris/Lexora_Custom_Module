<!-- delivery_tracking_workflow/views/sale_order_views.xml -->
<odoo>
    <record id="sale_order_search_delivery_tracking" model="ir.ui.view">
        <field name="name">sale.order.search.delivery.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_search"/>
        <field name="arch" type="xml">
            <!-- Insert your filter inside the search view safely -->
            <xpath expr="//search" position="inside">
                <filter name="delivery_tracking" string="Delivery Tracking"
                        domain="[('delivery_status', '!=', False)]"
                        help="Filter orders with delivery status set"/>
            </xpath>
        </field>
    </record>
</odoo>
