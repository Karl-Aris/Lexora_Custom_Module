<odoo>
  <template id="custom_page_template" name="Custom Page">
    <t t-call="website.layout">
      <div class="container my-5">
        <div class="row">
          <div class="col-12">
            <h2>Product Information</h2>
          </div>
        </div>

        <t t-if="product">
          <div class="row mt-4">
            <!-- Left: Image -->
            <div class="col-md-6 text-center">
              <t t-if="image_1920">
                <img t-att-src="'data:image/png;base64,%s' % image_1920" 
                     class="img-fluid rounded shadow-sm"
                     alt="Product Image"
                     style="max-height: 300px;"/>
              </t>
              <t t-else="">
                <div class="alert alert-secondary" role="alert">
                  No image available.
                </div>
              </t>
            </div>

            <!-- Right: Details -->
            <div class="col-md-6">
              <h3><t t-esc="product.name"/></h3>
              <p><strong>SKU:</strong> <t t-esc="product.default_code"/></p>
              <p><strong>Price:</strong>
                <t t-esc="product.lst_price"/> <span t-esc="product.currency_id.symbol"/>
              </p>
              <p><strong>Description:</strong></p>
              <div t-if="product.description_sale">
                <t t-raw="product.description_sale"/>
              </div>
              <div t-else="">
                <em>No description provided.</em>
              </div>
            </div>
          </div>
        </t>

        <t t-else="">
          <div class="alert alert-warning mt-4">
            No product data to display.
          </div>
        </t>
      </div>
    </t>
  </template>
</odoo>
