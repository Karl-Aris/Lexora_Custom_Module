<odoo>
  <record id="view_quality_check_tree_inherit_badge" model="ir.ui.view">
    <field name="name">quality.check.tree.badge</field>
    <field name="model">quality.check</field>
    <field name="inherit_id" ref="quality_control.quality_check_view_tree"/>
    <field name="arch" type="xml">
      <!-- Insert our badge HTML field after quality_state -->
      <xpath expr="//field[@name='quality_state']" position="after">
        <field name="condition_badge" widget="html" string="Condition"/>
      </xpath>
    </field>
  </record>
</odoo>
