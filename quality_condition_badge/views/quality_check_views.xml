<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quality_check_tree_inherit_badge" model="ir.ui.view">
        <field name="name">quality.check.tree.badge</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_order']" position="after">
                <xpath expr="//field[@name='control_date']" position="move"/>
                <field name="condition_badge_html" widget="html" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
