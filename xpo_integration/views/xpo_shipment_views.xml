<odoo>
    <record id="view_picking_form_xpo" model="ir.ui.view">
        <field name="name">stock.picking.form.xpo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group string="XPO Shipment Tracking">
                    <field name="xpo_tracking_number"/>
                    <field name="xpo_status" readonly="1"/>
                    <field name="xpo_estimated_delivery" readonly="1"/>
                    <button name="track_xpo_shipment" string="Track XPO" type="object" class="btn-primary"/>
                </group>
            </sheet>
        </field>
    </record>
</odoo>
