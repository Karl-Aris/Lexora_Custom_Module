<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_portal_order_confirmation" model="mail.template">
            <field name="name">Portal Order Confirmation Notification</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">âœ… Order Confirmed from Dealer Portal</field>
            <field name="email_to">youremail@yourcompany.com</field>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>A new order <strong>${object.name}</strong> has been confirmed by a dealer portal user.</p>
                <p>Customer: ${object.partner_id.name}<br/>
                Total: ${object.amount_total}</p>
                <p><a href="${object.get_base_url()}/web#id=${object.id}&model=sale.order&view_type=form">View the Order</a></p>
            ]]></field>
        </record>
    </data>
</odoo>