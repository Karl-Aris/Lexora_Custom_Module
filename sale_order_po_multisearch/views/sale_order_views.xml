<odoo>
    <record id="view_order_filter_po_multisearch" model="ir.ui.view">
        <field name="name">sale.order.search.po.multisearch</field>
        <field name="model">sale.order</field>
        <!-- inherit the right search view -->
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <!-- Insert inside the <search> element -->
            <xpath expr="//search" position="inside">
                <filter name="po_multi_search"
                        string="PO Multi Search"
                        domain="[]"
                        context="{'multi_po_search': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
