<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_vendor_bill_tab" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendor.bill.tab</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@string='Unbuild']" position="after">
                <page string="Vendor Bill">
                    <field name="vendor_bill_ids">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                        <form>
                            <group>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="invoice_line_ids"/>
                                <field name="amount_total" readonly="1"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>