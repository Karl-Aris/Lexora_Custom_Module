<odoo>
    <!-- Create a top-level menu -->
    <menuitem id="menu_custom_stock_root"
              name="Custom Stock"
              sequence="10"/>

    <!-- Submenu for Stock Move Lines -->
    <menuitem id="menu_stock_move_line_root"
              name="Stock Move Lines"
              parent="menu_custom_stock_root"
              action="action_stock_move_line_list"
              sequence="20"/>

    <!-- Action to open stock.move.line -->
    <record id="action_stock_move_line_list" model="ir.actions.act_window">
        <field name="name">Stock Move Lines</field>
        <field name="res_model">stock.move.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Optional: Extend tree view to show custom field -->
    <record id="view_stock_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.custom</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_uom_id" position="after">
                <field name="x_custom_note"/>
                <field name="x_qty_double"/>
            </field>
        </field>
    </record>

    <!-- Optional: Extend form view to show custom field -->
    <record id="view_stock_move_line_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit.custom</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <field name="x_custom_note"/>
                <field name="x_qty_double" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
