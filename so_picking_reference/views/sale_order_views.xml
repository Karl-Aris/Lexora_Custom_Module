<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_picking_ref" model="ir.ui.view">
        <field name="name">sale.order.form.picking.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="x_picking_in" readonly="1"/>
                <field name="x_delivery_out" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
