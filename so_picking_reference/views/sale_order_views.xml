<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_picking_refs" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.picking.refs</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert after customer PO reference -->
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="x_picking_in"/>
                <field name="x_delivery_out"/>
            </xpath>
        </field>
    </record>
</odoo>
