<odoo>
    <record id="res_config_settings_view_form_carrier_tracking" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.carrier.tracking</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Carrier Integration" string="Carrier Integration">
                    <h2>Carrier API Settings</h2>
                    <group>
                        <field name="xpo_api_key"/>
                        <field name="ups_client_id"/>
                        <field name="ups_client_secret"/>
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
