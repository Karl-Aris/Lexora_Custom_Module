<odoo>
    <record id="view_order_form_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='delivery']" position="inside">
                <group string="Tracking">
                    <field name="tracking_number" readonly="1"/>
                    <field name="tracking_status" readonly="1"/>
                    <button name="action_track_shipment" string="Track Shipment" type="object" class="btn-primary"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
