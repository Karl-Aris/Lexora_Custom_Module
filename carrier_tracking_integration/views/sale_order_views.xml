<odoo>
    <record id="view_order_form_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert after Carrier Tracking Ref -->
            <xpath expr="//field[@name='carrier_tracking_ref']" position="after">
                <field name="tracking_status" readonly="1"/>
                <button name="action_track_shipment"
                        string="Track Shipment"
                        type="object"
                        class="btn-primary"
                        icon="fa-truck"/>
            </xpath>
        </field>
    </record>
</odoo>
