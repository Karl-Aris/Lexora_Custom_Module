<odoo>
    <record id="view_order_form_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert inside Other Information tab -->
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <!-- Show the Delivery Out Picking -->
                <field name="x_delivery_out" readonly="1"/>
                
                <!-- Show computed Tracking Status -->
                <field name="tracking_status" readonly="1"/>
                
                <!-- Track Shipment button -->
                <button name="action_track_shipment"
                        string="Track Shipment"
                        type="object"
                        class="btn-primary"
                        icon="fa-truck"/>
            </xpath>
        </field>
    </record>
</odoo>
