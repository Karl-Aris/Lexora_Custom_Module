<odoo>
    <record id="view_order_form_inherit_fedex" model="ir.ui.view">
        <field name="name">sale.order.form.fedex.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_fedex_track"
                        string="FedEx Track"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
