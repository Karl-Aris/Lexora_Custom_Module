<odoo>
    <record id="view_order_form_fedex_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.fedex.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_track_shipment"
                        string="Track Shipment"
                        type="object"
                        class="btn-primary"/>
            </header>
            <sheet position="inside">
                <group string="Shipment Tracking">
                    <field name="tracking_number"/>
                    <field name="tracking_status"/>
                </group>
            </sheet>
        </field>
    </record>
</odoo>
