<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_fedex" model="ir.ui.view">
        <field name="name">sale.order.form.fedex.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add FedEx Tracking button inside the header -->
            <xpath expr="//header" position="inside">
                <button name="action_fedex_track"
                        type="object"
                        string="FedEx Tracking"
                        class="btn-secondary"
                        attrs="{'invisible': [('carrier_id.delivery_type', '!=', 'fedex_rest')]}"/>
            </xpath>

            <!-- Add Tracking Number and Status in Other Information tab -->
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="FedEx Tracking">
                    <field name="fedex_tracking_number"/>
                    <field name="fedex_tracking_status" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
