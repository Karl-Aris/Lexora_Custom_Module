<odoo>
    <record id="view_order_form_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add fields inside "Other Information" page -->
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group>
                    <field name="delivery_tracking_ref" readonly="1"/>
                    <field name="tracking_status" readonly="1"/>
                    <button name="action_track_shipment"
                            string="Track Shipment"
                            type="object"
                            class="btn-primary"
                            icon="fa-truck"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
