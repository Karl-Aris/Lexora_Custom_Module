<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_carrier_track_btn" model="ir.ui.view">
        <field name="name">stock.picking.form.carrier.track</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- A small tracking panel -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Carrier Tracking">
                    <group>
                        <!-- Use Odoo's standard tracking reference -->
                        <field name="carrier_tracking_ref"/>
                        <field name="tracking_status" readonly="1" attrs="{'nolabel': True}" />
                        <button name="action_track_shipment"
                                type="object"
                                string="Track Shipment"
                                class="oe_highlight"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
