<odoo>
    <record id="delivery_carrier_fedex_rest_form" model="ir.ui.view">
        <field name="name">delivery.carrier.form.fedex.rest</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='integration']" position="inside">
                <group attrs="{'invisible': [('delivery_type', '!=', 'fedex_rest')]}">
                    <field name="fedex_client_id"/>
                    <field name="fedex_client_secret" password="True"/>
                    <field name="fedex_use_sandbox"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
