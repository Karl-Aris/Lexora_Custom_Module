<odoo>
    <record id="view_delivery_carrier_form_tracking" model="ir.ui.view">
        <field name="name">delivery.carrier.form.tracking</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']" position="inside">
                <group string="Tracking Integration">
                    <field name="tracking_integration_enabled"/>
                    <field name="tracking_carrier" attrs="{'invisible': [('tracking_integration_enabled','=',False)]}"/>
                    <field name="tracking_api_key" attrs="{'invisible': [('tracking_integration_enabled','=',False)]}"/>
                    <field name="tracking_account_number" attrs="{'invisible': [('tracking_integration_enabled','=',False)]}"/>
                    <button name="action_test_tracking_connection"
                            type="object"
                            string="Test Connection"
                            class="btn-primary"
                            attrs="{'invisible': [('can_test_tracking','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
