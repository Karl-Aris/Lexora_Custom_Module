<odoo>
    <record id="view_delivery_carrier_form_fedex" model="ir.ui.view">
        <field name="name">delivery.carrier.form.fedex.rest</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group string="FedEx REST API">
                    <field name="fedex_client_id"/>
                    <field name="fedex_client_secret" password="True"/>
                    <field name="fedex_use_sandbox"/>
                </group>
            </sheet>
        </field>
    </record>
</odoo>
