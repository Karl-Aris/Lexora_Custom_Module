<odoo>
    <record id="view_delivery_carrier_form_tracking" model="ir.ui.view">
        <field name="name">delivery.carrier.form.tracking</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='integration']" position="after">
                <group string="UPS API">
                    <field name="ups_username"/>
                    <field name="ups_password"/>
                    <field name="ups_access_key"/>
                </group>
                <group string="XPO API">
                    <field name="xpo_client_id"/>
                    <field name="xpo_secret_key"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
