<odoo>
    <!-- Add Condition Status badge to Quality Check Form -->
    <record id="view_quality_check_form_inherit_badge" model="ir.ui.view">
        <field name="name">quality.check.form.condition.badge</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="condition_status_html" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
