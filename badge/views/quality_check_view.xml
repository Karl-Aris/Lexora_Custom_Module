<odoo>
    <!-- Inherit Quality Check form -->
    <record id="view_quality_check_form_inherit_badge" model="ir.ui.view">
        <field name="name">quality.check.form.inherit.badge</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='test_type_id']" position="after">
                <field name="condition_badge" readonly="1" nolabel="1"/>
            </xpath>
        </field>
    </record>
</odoo>
