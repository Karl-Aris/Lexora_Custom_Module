<odoo>
  <record id="view_helpdesk_ticket_form_inherit_chatter" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.inherit.chatter</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <field name="message_ids" widget="mail_thread" options="{'reload_on_button': true}"/>
      </xpath>
    </field>
  </record>
</odoo>