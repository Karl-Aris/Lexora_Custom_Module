<odoo>
  <record id="view_payment_provider_form_fee" model="ir.ui.view">
    <field name="name">payment.provider.form.fee</field>
    <field name="model">payment.provider</field>
    <field name="inherit_id" ref="payment.view_payment_provider_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group" position="inside">
        <field name="fixed_fee"/>
        <field name="percentage_fee"/>
      </xpath>
    </field>
  </record>
</odoo>