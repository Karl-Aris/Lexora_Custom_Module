<odoo>
  <record id="view_deduction_vendor_tree" model="ir.ui.view">
    <field name="name">deduction.vendor.tree</field>
    <field name="model">deduction.vendor</field>
    <field name="arch" type="xml">
      <tree string="Deduction Vendor">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="deduction_date"/>
        <field name="deduction_total_amount"/>
        <field name="ticket_status"/>
      </tree>
    </field>
  </record>

  <record id="view_deduction_vendor_form" model="ir.ui.view">
    <field name="name">deduction.vendor.form</field>
    <field name="model">deduction.vendor</field>
    <field name="arch" type="xml">
      <form string="Deduction Vendor">
        <sheet>
          <group>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="deduction_date"/>
            <field name="deduction_total_amount"/>
            <field name="paid_amount"/>
            <field name="currency_id"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="sale_order_line_ids">
                <tree editable="bottom">
                  <field name="sku_id"/>
                  <field name="po_number"/>
                  <field name="amount"/>
                </tree>
              </field>
            </page>
            <page string="Details">
              <group>
                <field name="reason"/>
                <field name="resolution"/>
                <field name="taken_actions"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_deduction_vendor" model="ir.actions.act_window">
    <field name="name">Deduction Vendor</field>
    <field name="res_model">deduction.vendor</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
