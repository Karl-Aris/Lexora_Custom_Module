<odoo>
  <record id="view_deduction_import_wizard_form" model="ir.ui.view">
    <field name="name">deduction.import.wizard.form</field>
    <field name="model">deduction.import.wizard</field>
    <field name="arch" type="xml">
      <form string="Deduction Import">
        <group>
          <field name="file_data" filename="filename"/>
          <field name="filename"/>
          <field name="delimiter"/>
          <field name="has_header"/>
        </group>
        <footer>
          <button string="Import" type="object" name="action_import" class="btn-primary"/>
          <button string="Cancel" class="btn-default" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_deduction_import_wizard" model="ir.actions.act_window">
    <field name="name">Import Deductions</field>
    <field name="res_model">deduction.import.wizard</field>
    <field name="binding_model_id"/>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_deduction_import_wizard_form"/>
  </record>
</odoo>
