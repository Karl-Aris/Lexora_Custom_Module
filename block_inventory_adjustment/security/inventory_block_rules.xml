<odoo>
    <record id="group_inventory_blocked" model="res.groups">
        <field name="name">Inventory Blocked Users</field>
        <field name="category_id" ref="base.module_category_inventory"/>
    </record>

    <record id="rule_block_adjustments" model="ir.rule">
        <field name="name">Block Inventory Adjustments</field>
        <field name="model_id" ref="stock.model_stock_quant"/>
        <field name="groups" eval="[(4, ref('block_inventory_adjustment.group_inventory_blocked'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('id', '=', -1)]</field>
    </record>
</odoo>
