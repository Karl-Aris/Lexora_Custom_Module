<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Sale Order form and add fields to Other Information tab -->
    <record id="view_order_form_delivery_tracking_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.tracking.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert into the "Other Information" tab -->
            <xpath expr="//page[@name='other_information']/group" position="inside">

                <group string="Delivery Tracking">
                    <field name="delivery_status"/>
                    <field name="etd"/>
                    <field name="follow_up_required"/>
                    <field name="actual_delivery_date"/>
                    <field name="contacted"/>
                    <field name="contact_notes"/>
                </group>

            </xpath>
        </field>
    </record>
</odoo>
