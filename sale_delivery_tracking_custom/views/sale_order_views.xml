<odoo>
    <!-- Form view fields inside Other Information -->
    <record id="view_order_form_inherit_delivery_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="Delivery Tracking">
                    <field name="x_delivery_status"/>
                    <field name="etd"/>
                    <field name="follow_up_required"/>
                    <field name="actual_delivery_date"/>
                    <field name="contacted"/>
                    <field name="contact_notes"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Search view filters and group-by -->
    <record id="view_sale_order_search_inherit_delivery_status" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.delivery.status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='order_month']" position="after">
                <!-- Group By: Delivery Status -->
                <filter name="group_by_delivery_status"
                        string="Delivery Status"
                        context="{'group_by': 'x_delivery_status'}"/>

                <!-- Quick filters -->
                <separator string="Delivery Status"/>
                <filter name="delivery_status_not_delivered"
                        string="Not Delivered"
                        domain="[('x_delivery_status', '=', 'not_delivered')]"/>
                <filter name="delivery_status_delivered"
                        string="Delivered"
                        domain="[('x_delivery_status', '=', 'delivered')]"/>
                <filter name="delivery_status_exception"
                        string="Exception"
                        domain="[('x_delivery_status', '=', 'exception')]"/>
            </xpath>
        </field>
    </record>
</odoo>
