<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="product_sku_page_view" model="ir.ui.view">
    <field name="name">product.sku.page</field>
    <field name="type">qweb</field>
    <field name="website_id" eval="False"/>
    <field name="arch" type="xml">
      <template id="product_sku_page" name="Product by SKU" page="True">
        <t t-call="website.layout">
          <div class="container my-5">
            <h2>Search Product by SKU</h2>

            <form action="/sku-search" method="get" class="mb-4">
              <div class="form-group">
                <label for="sku">Enter SKU:</label>
                <input type="text" id="sku" name="sku" class="form-control" required="required" t-att-value="sku"/>
              </div>
              <button type="submit" class="btn btn-primary mt-2">Search</button>
            </form>

            <t t-if="sku">
              <h3>Search Result for SKU: <t t-esc="sku"/></h3>
              <t t-if="product">
                <p><strong>Name:</strong> <t t-esc="product.name"/></p>
                <p><strong>SKU:</strong> <t t-esc="product.default_code"/></p>
              </t>
              <t t-else="">
                <p>No product found for SKU "<t t-esc="sku"/>".</p>
              </t>
            </t>
          </div>
        </t>
      </template>
    </field>
  </record>
</odoo>
