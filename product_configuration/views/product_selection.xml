<odoo>
  <!-- templates.xml -->
<template id="template_product_configuration" name="Product Configuration">
    <t t-call="website.layout">
        <div class="container my-4">
            <h2>Kits for Collection: <t t-esc="collection"/></h2>

            <t t-foreach="grouped_kits.items()" t-as="kit_group">
                <div class="my-4">
                    <h4>Size: <t t-esc="kit_group[0]"/></h4>

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                        <t t-foreach="kit_group[1]" t-as="kit">
                            <div class="col">
                                <div class="card h-100">
                                    <!-- Image placeholder or image -->
                                    <t t-if="kit.image_1920">
                                        <img t-att-src="'data:image/png;base64,%s' % kit.image_1920" class="card-img-top" alt="Kit Image"/>
                                    </t>
                                    <t t-else="">
                                        <div class="card-img-top bg-light text-center" style="height: 200px; line-height: 200px;">
                                            <span class="text-muted">No Image</span>
                                        </div>
                                    </t>

                                    <!-- Card Body -->
                                    <div class="card-body">
                                        <h5 class="card-title">Size: <t t-esc="kit.size"/></h5>
                                        <!-- Add more fields here if needed -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>
</template>
</odoo>
