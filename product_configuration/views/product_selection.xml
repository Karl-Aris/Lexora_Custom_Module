<odoo>
  <template id="template_product_configuration" name="Product Configuration">
    <t t-call="website.layout">
      <div class="container my-5">
        <div class="row">
          <div class="col-12">
            <h2>Product Information</h2>
          </div>
        </div>

        <t t-if="product">
          <div class="row mt-4">

            <!-- Left: Image -->
            <div class="col-md-6 text-center">
              <t t-if="product.image_1920">
                <img t-att-src="'data:image/png;base64,%s' % product.image_1920.decode('utf-8')" 
                class="img-fluid rounded shadow-sm"
                alt="Product Image"
                style="max-height: 300px;"/>
              </t>
              <t t-else="">
                <div class="alert alert-secondary" role="alert">
                  No image available.
                </div>
              </t>
            </div>

            <!-- Right: Details -->
            <div class="col-md-6">

              <div> <!--Container for product details-->
              
              <h3><t t-esc="product.name"/></h3>
              <p><strong>SKU:</strong> <t t-esc="product.default_code"/></p>
              <p><strong>Color:</strong> <t t-esc="color_name"/></p>
              <p><strong>Price:</strong>
                <t t-esc="product.lst_price"/> <span t-esc="product.currency_id.symbol"/>
              </p>
              <p><strong>Description:</strong></p>
              <div t-if="product.description_sale">
                <t t-raw="product.description_sale"/>
              </div>
              <div t-else="">
                <em>No description provided.</em>
              </div>

              </div>

              <div> <!--Container for configuration-->

              <div> <!--Select Size-->
                  <p><strong>Select Sizes for <t t-esc="collection_name"/> Collection</strong></p>
                  <div class="row">
                    <t t-if="related_sizes">
                      <t t-foreach="related_sizes" t-as="variant">
                      <div class="col-6 col-md-4 mb-3">
                        <a t-att-href="'/store/cabinet?sku=' + variant.default_code" class="text-decoration-none text-dark">
                          <div class="card shadow-sm text-center hover-shadow">
                            <t t-if="variant.image_1920">
                              <img t-att-src="'data:image/png;base64,%s' % variant.image_1920.decode('utf-8')" 
                                  class="card-img-top img-fluid" 
                                  alt="Variant Image" style="height: 150px; object-fit: cover;"/>
                            </t>
                            <t t-else="">
                              <div class="p-3 text-muted">No image</div>
                            </t>

                            <div class="card-body p-2">
                              <p class="card-text">
                                <strong>Size:</strong>
                                <t t-set="size_tag" 
                                  t-value="variant.product_tmpl_id.product_tag_ids.filtered(lambda tag: tag.name.isdigit())"/>
                                <t t-esc="' / '.join(size_tag.mapped('name')) if size_tag else 'N/A'"/>
                              </p>
                              <p class="card-text"><strong>SKU:</strong> <t t-esc="variant.default_code"/></p>
                            </div>
                          </div>
                        </a>
                      </div>
                    </t>
                    </t>
                    <t t-else="">
                      <div class="alert alert-info">No sizes available in this collection.</div>
                    </t>
                  </div>
                </div>

              
              </div>

            </div>

          </div>

        </t>

        <t t-else="">
          <div class="alert alert-warning mt-4">
            No product data to display.
          </div>
        </t>
      </div>
    </t>
  </template>
</odoo>
