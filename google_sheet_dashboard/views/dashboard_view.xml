<odoo>
  <record id="view_form_report_google_sheet" model="ir.ui.view">
    <field name="name">x.report.form.google.sheet</field>
    <field name="model">x_report</field>
    <field name="arch" type="xml">
      <form string="Google Sheet Dashboard">
        <sheet>
          <group>
            <field name="x_studio_embedded_google_sheet"/>
          </group>
          <group>
            <xpath expr="//sheet" position="inside">
              <div t-if="record.x_studio_embedded_google_sheet.raw_value">
                <iframe t-att-src="record.x_studio_embedded_google_sheet.raw_value"
                        width="100%" height="800px"
                        frameborder="0" allowfullscreen="allowfullscreen"/>
              </div>
            </xpath>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_report_google_sheet" model="ir.actions.act_window">
    <field name="name">Google Sheet Dashboard</field>
    <field name="res_model">x_report</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_report_google_sheet"/>
    <field name="target">current</field>
  </record>

  <menuitem id="menu_google_sheet_dashboard"
            name="Google Sheet Dashboard"
            parent="base.menu_custom"
            action="action_report_google_sheet" />
</odoo>
