<odoo>
    <!-- Include our JS -->
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Authorize.Net Fee JS">
        <xpath expr="." position="inside">
            <script type="module" src="/website_authorize_net_fee/static/src/js/payment_fee.js"/>
        </xpath>
    </template>

    <!-- Correct payment provider label with fee -->
    <template id="payment_provider_fee_label" inherit_id="website_sale.payment_option">
        <xpath expr="//label[contains(@class, 'o_payment_provider_label')]" position="inside">
            <t t-if="provider.code == 'authorize'">
                <span class="text-danger fw-bold ms-2">(+3.5% Fee)</span>
            </t>
        </xpath>
    </template>
</odoo>
