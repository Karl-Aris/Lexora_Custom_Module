<odoo>
    <record id="view_order_tree_inherit_favorites" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.favorites</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Open Orders" name="open_orders" domain="[('state','=','sale')]"/>
                <filter string="Shipped" name="shipped" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancel')]"/>
            </xpath>
        </field>
    </record>
</odoo>
