<odoo>
    <record id="view_order_filter_inherit_favorites" model="ir.ui.view">
        <field name="name">sale.order.filter.inherit.favorites</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Open Orders" domain="[('state', '=', 'sale')]"/>
                <filter string="Shipped" domain="[('x_shipped_date', '!=', False)]" context="{'group_by':'x_shipped_date'}"/>
                <filter string="Cancelled" domain="[('state','=','cancel')]"/>
            </xpath>
        </field>
    </record>
</odoo>
