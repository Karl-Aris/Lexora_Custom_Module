<templates id="template" xml:space="preserve">
    <t t-extend="web.SearchFavoritesMenu">
        <t t-jquery="div.o_favorites_menu" t-operation="replace">
            <div class="o_favorites_menu dropdown-menu">
                <t t-if="widget.searchModel && widget.searchModel.config.modelName == 'sale.order'">
                    <div class="dropdown-header">Open Orders</div>
                    <a class="dropdown-item" t-att-data-domain="'[('state','=','draft')]'">Quotations</a>
                    <a class="dropdown-item" t-att-data-domain="'[('state','=','sale')]'">Confirmed</a>

                    <div class="dropdown-header">Shipped</div>
                    <a class="dropdown-item" t-att-data-domain="'[('state','=','done')]'">Delivered</a>

                    <div class="dropdown-header">Cancelled</div>
                    <a class="dropdown-item" t-att-data-domain="'[('state','=','cancel')]'">Cancelled Orders</a>
                </t>
                <t t-else="">
                    <t t-original="true"/>
                </t>
            </div>
        </t>
    </t>
</templates>
