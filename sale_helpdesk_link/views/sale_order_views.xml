<odoo>
    <record id="view_sale_order_form_inherit_tickets" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.helpdesk</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="%(helpdesk.helpdesk_ticket_action)d"
                        type="action"
                        context="{'search_default_matched_sale_order_id': active_id}"
                        class="oe_stat_button"
                        icon="fa-ticket">
                    <field name="x_x_matched_sale_order_ids_helpdesk_ticket_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
