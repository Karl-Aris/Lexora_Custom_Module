<odoo>
    <record id="delivery_carrier_form_fedex_rest" model="ir.ui.view">
        <field name="name">delivery.carrier.form.fedex.rest</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.delivery_carrier_form"/>
        <field name="arch" type="xml">

            <!-- Insert our new FedEx REST page inside notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="FedEx REST" attrs="{'invisible': [('delivery_type', '!=', 'fedex_rest')]}">
                    <group>
                        <field name="fedex_rest_api_key"/>
                        <field name="fedex_rest_api_secret" password="True"/>
                        <field name="fedex_rest_account_number"/>
                        <field name="fedex_rest_sandbox"/>
                    </group>
                    <group string="Shipping Options">
                        <field name="fedex_rest_service_type"/>
                        <field name="fedex_rest_packaging_type"/>
                        <field name="fedex_rest_pickup_type"/>
                        <field name="fedex_rest_label_type"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
