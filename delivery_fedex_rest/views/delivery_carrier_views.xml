<odoo>
  <record id="view_delivery_carrier_form_fedex_rest" model="ir.ui.view">
    <field name="name">delivery.carrier.form.fedex.rest</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='provider_details']" position="inside">
        <group t-if="record.delivery_type.raw_value == 'fedex_rest'" string="FedEx (REST) Configuration">
          <group>
            <field name="fedex_rest_api_key" password="True"/>
            <field name="fedex_rest_api_secret" password="True"/>
            <field name="fedex_rest_account_number"/>
            <field name="fedex_rest_base_url" placeholder="https://apis-sandbox.fedex.com"/>
          </group>
          <group string="Defaults">
            <field name="fedex_rest_service_type"/>
            <field name="fedex_rest_dropoff_type"/>
            <field name="fedex_rest_packaging_type"/>
            <field name="fedex_rest_label_stock_type"/>
            <field name="fedex_rest_label_image_type"/>
            <field name="fedex_rest_use_locations"/>
          </group>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
