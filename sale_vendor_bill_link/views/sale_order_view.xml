<odoo>
    <!-- Action definition MUST be above the view that references it -->
    <record id="action_vendor_bills_from_sale" model="ir.actions.act_window">
        <field name="name">Vendor Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sale_order_id', '=', active_id), ('move_type', '=', 'in_invoice')]</field>
        <field name="context">{'default_move_type': 'in_invoice', 'default_sale_order_id': active_id}</field>
    </record>

    <record id="view_order_form_inherit_vendor_bills" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bills</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="vendor_bills" string="Vendor Bills">
                    <field name="vendor_bill_ids" context="{'default_move_type': 'in_invoice', 'default_sale_order_id': active_id}">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                        <form>
                            <group>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="date"/>
                                <field name="invoice_line_ids"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="%(action_vendor_bills_from_sale)d"
                        string="Vendor Bills"
                        type="action"
                        icon="fa-file-invoice"
                        attrs="{'invisible': [('vendor_bill_count', '=', 0)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
