<odoo>

    <!-- Define the action FIRST -->
    <record id="action_vendor_bills_from_sale" model="ir.actions.act_window">
        <field name="name">Vendor Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sale_order_id', '=', active_id), ('move_type', '=', 'in_invoice')]</field>
        <field name="context">{}</field>
    </record>

    <!-- Inherited sale order view -->
    <record id="view_order_form_inherit_vendor_bills" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bills</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="vendor_bills" string="Vendor Bills">
                    <field name="vendor_bill_ids">
                        <form string="Vendor Bill">
                            <group>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="invoice_line_ids"/>
                            </group>
                        </form>
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                            <field name="amount_total" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="%(sale_vendor_bill_link.action_vendor_bills_from_sale)d"
                        type="action"
                        string="Vendor Bills"
                        icon="fa-file-invoice"
                        attrs="{'invisible': [('vendor_bill_count', '=', 0)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
