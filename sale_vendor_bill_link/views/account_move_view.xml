<odoo>
    <record id="view_account_move_form_inherit_sale_link" model="ir.ui.view">
        <field name="name">account.move.form.inherit.sale.link</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="sale_order_id" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
