<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_custom_search" model="ir.ui.view">
        <field name="name">sale.order.search.custom.filters</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_search"/>
        <field name="arch" type="xml">
            <search>
                <!-- Filter by Picking In -->
                <filter string="Picking In" name="filter_picking_in"
                        domain="[('x_picking_in','!=',False)]"/>
                
                <!-- Filter by Delivery Out -->
                <filter string="Delivery Out" name="filter_delivery_out"
                        domain="[('x_delivery_out','!=',False)]"/>
                
                <!-- Custom filter using multiple stock pickings -->
                <filter string="WH/PICK &amp; WH/OUT" name="filter_pick_out"
                        domain="['|',('x_picking_in','!=',False),('x_delivery_out','!=',False)]"/>
            </search>
        </field>
    </record>
</odoo>
