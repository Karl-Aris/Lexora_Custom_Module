<!-- sale_order_delivery_tracking/views/ir_filters_views.xml -->
<odoo>
    <record id="view_ir_filters_form_inherit_group_name" model="ir.ui.view">
        <field name="name">ir.filters.form.group.name</field>
        <field name="model">ir.filters</field>
        <field name="inherit_id" ref="base.view_ir_filters_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="group_name"/>
            </xpath>
        </field>
    </record>

    <!-- Optional: Add group_name to tree/list view -->
    <record id="view_ir_filters_tree_inherit_group_name" model="ir.ui.view">
        <field name="name">ir.filters.tree.group.name</field>
        <field name="model">ir.filters</field>
        <field name="inherit_id" ref="base.view_ir_filters_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="group_name"/>
            </xpath>
        </field>
    </record>
</odoo>
