<odoo>
    <record id="sale_order_search_inherit_quotation_custom" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.quotation.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <!-- Insert new filters into the existing Group By / Filters area -->
            <xpath expr="//filter[@name='is_local']" position="after">
                <separator/>
                <filter string="Shipped" name="filter_shipped" domain="[('state', '=', 'shipped')]"/>
                <filter string="Returned" name="filter_returned" domain="[('state', '=', 'returned')]"/>
                <filter string="Cancelled" name="filter_cancelled" domain="[('state', '=', 'cancel')]"/>
            </xpath>
        </field>
    </record>
</odoo>
