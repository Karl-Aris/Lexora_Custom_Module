<odoo>
    <!-- Scheduled action to run daily -->
    <record id="ir_cron_update_delivery_status" model="ir.cron">
        <field name="name">Update Sale Order Delivery Status Daily</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.update_delivery_status_daily()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
