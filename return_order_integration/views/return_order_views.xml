<odoo>
    <record id="view_return_order_tree" model="ir.ui.view">
        <field name="name">return.order.tree</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <tree string="Return Orders">
                <field name="name"/>
                <field name="picking_name"/>
                <field name="return_date"/>
                <field name="qc_condition"/>
                <field name="qc_sku"/>
                <field name="carrier"/>
                <field name="merchant"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_return_order_form" model="ir.ui.view">
        <field name="name">return.order.form</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <form string="Return Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sale_order_id" options="{'no_open': False}"/>
                        <field name="picking_id" options="{'no_open': False}"/>
                    </group>
                    <group>
                        <field name="return_date"/>
                        <field name="date_shipped"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="qc_condition"/>
                        <field name="qc_sku"/>
                        <field name="carrier"/>
                        <field name="merchant"/>
                    </group>
                    <group>
                        <field name="archive_link"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
