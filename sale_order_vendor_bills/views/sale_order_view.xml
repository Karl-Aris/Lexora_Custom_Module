<odoo>
    <record id="view_order_form_inherit_vendor_bills" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendor.bills</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="vendor_bills" string="Vendor Bills">
                    <field name="vendor_bill_ids" context="{'default_sale_order_id': active_id}">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="invoice_date"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
