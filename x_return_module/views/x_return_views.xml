<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_x_return_tree" model="ir.ui.view">
        <field name="name">x.return.tree</field>
        <field name="model">x.return</field>
        <field name="arch" type="xml">
            <tree string="Return Lines">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty_done"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="reference"/>
            </tree>
        </field>
    </record>

    <record id="view_x_return_form" model="ir.ui.view">
        <field name="name">x.return.form</field>
        <field name="model">x.return</field>
        <field name="arch" type="xml">
            <form string="Return Line">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="lot_id"/>
                        <field name="product_uom_id"/>
                        <field name="qty_done"/>
                    </group>
                    <group>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                        <field name="owner_id"/>
                        <field name="reference" readonly="1"/>
                    </group>
                    <group>
                        <field name="move_id"/>
                        <field name="move_line_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
