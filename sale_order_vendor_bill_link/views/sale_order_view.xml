<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bill</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- Existing button -->
                <button name="action_create_vendor_bill"
                        type="object"
                        string="Create Vendor Bill"
                        class="btn-primary"/>
            
                <!-- New stat button -->
                <button name="action_view_vendor_bills"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-invoice">
                    <field name="vendor_bill_count" widget="statinfo" string="Vendor Bills"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
