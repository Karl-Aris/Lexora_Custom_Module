<odoo>
    <record id="view_order_form_inherit_vendor_bill_btn" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bill.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button type="object"
                        name="action_open_vendor_bills"
                        class="oe_stat_button"
                        icon="fa-file-invoice-dollar">
                    <field name="vendor_bill_count" widget="statinfo" nolabel="1"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
