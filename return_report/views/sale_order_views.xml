<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="sale_order_quotation_import_button_tree_inherit_js_class" model="ir.ui.view">
       <field name="name">sale.order.quotation.import.button.tree.inherit</field>
       <field name="model">sale.order</field>
       <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
       <field name="arch" type="xml">
           <xpath expr="//tree" position="attributes">
               <attribute name="js_class">return_report</attribute>
           </xpath>
       </field>
   </record>

   <record id="sale_order_form_inherit_mode_freight" model="ir.ui.view">
       <field name="name">sale.order.form.inherit.mode_freight</field>
       <field name="model">sale.order</field>
       <field name="inherit_id" ref="sale.view_order_form"/>
       <field name="arch" type="xml">
            <xpath expr="//field[@name='shipping_weight']" position="after">
                <field name="mode_freight" readonly="False"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="order_customer" readonly="state in ['cancel', 'sale']"/>
                <field name="order_address" readonly="state in ['cancel', 'sale']"/>
                <field name="order_phone" readonly="state in ['cancel', 'sale']"/>
            </xpath>
       </field>
   </record>

</odoo>