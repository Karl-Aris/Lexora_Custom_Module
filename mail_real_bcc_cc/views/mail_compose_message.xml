<odoo>
  <record id="view_mail_compose_message_form_inherit_cc_bcc" model="ir.ui.view">
    <field name="name">mail.compose.message.form.cc.bcc</field>
    <field name="model">mail.compose.message</field>
    <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='partner_ids']" position="after">
        <field name="cc_partner_ids" widget="many2many_tags"/>
        <field name="bcc_partner_ids" widget="many2many_tags"/>
      </xpath>
    </field>
  </record>
</odoo>
