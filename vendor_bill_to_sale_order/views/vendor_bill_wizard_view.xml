<odoo>
      <record id="view_create_vendor_bill_wizard_form" model="ir.ui.view">
          <field name="name">create.vendor.bill.wizard.form</field>
          <field name="model">create.vendor.bill.wizard</field>
          <field name="arch" type="xml">
              <form string="Create Vendor Bill">
                  <group>
                      <field name="sale_order_id" readonly="1"/>
                      <field name="purchase_reference"/>
                      <field name="partner_id"/>
                      <field name="product_id"/>
                      <field name="quantity"/>
                      <field name="price_unit"/>
                  </group>
                  <footer>
                      <button string="Create"
                              name="action_create_vendor_bill"
                              type="object"
                              class="btn-primary"/>
                      <button string="Cancel" special="cancel"/>
                  </footer>
              </form>
          </field>
      </record>
</odoo>
