<!-- views/vendor_bill_wizard_view.xml -->
<odoo>
  <record id="view_vendor_bill_wizard_form" model="ir.ui.view">
    <field name="name">vendor.bill.wizard.form</field>
    <field name="model">vendor.bill.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Vendor Bill">
        <group>
          <field name="sale_order_id" readonly="1"/>
          <field name="purchase_order_ref" readonly="1"/>
        </group>
        <footer>
          <button string="Create Vendor Bill" type="object" name="create_vendor_bill" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
