<odoo>
    <record id="view_sale_order_form_inherit_vendor_bill" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bill</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <t t-if="record.state.raw_value == 'sale'">
                    <button name="action_create_vendor_bill"
                            type="object"
                            string="Create Vendor Bill"
                            class="oe_highlight"/>
                </t>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(account.action_move_in_invoice_type)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-file-invoice">
                    <field name="vendor_bill_count" widget="statinfo" string="Vendor Bills"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
