<odoo>
    <record id="view_order_form_inherit_vendor_bill" model="ir.ui.view">
        <field name="name">sale.order.vendor.bill.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button type="object" icon="fa-file-invoice-dollar" name="action_view_vendor_bills"
                        class="oe_stat_button" attrs="{'invisible': [('vendor_bill_ids', '=', False)]}">
                    <field name="vendor_bill_count" widget="statinfo" nolabel="1"/>
                </button>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="open_create_vendor_bill_wizard" type="object"
                        string="Create Vendor Bill" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'sale')]}"/>
            </xpath>
            </data>
        </field>
    </record>
</odoo>