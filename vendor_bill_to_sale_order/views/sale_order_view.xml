<odoo>
  <record id="view_order_form_vendor_bill_button" model="ir.ui.view">
      <field name="name">sale.order.form.vendor.bill.button</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="//div[@class='oe_button_box']" position="inside">
              <button name="action_create_vendor_bill"
                      type="object"
                      string="Vendor Bill"
                      icon="fa-file-invoice-dollar"
                      class="oe_stat_button"
                      attrs="{'invisible': [('state', '!=', 'sale')]}">
                  <field name="x_vendor_bill_count" widget="statinfo"/>
              </button>
          </xpath>
      </field>
  </record>
</odoo>
