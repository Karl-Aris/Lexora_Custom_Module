<odoo>
    <!-- Tree View -->
    <record id="view_returns_report_tree" model="ir.ui.view">
        <field name="name">returns.report.tree</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="qty_done"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="return_reason"/>
                <field name="is_processed"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_returns_report_form" model="ir.ui.view">
        <field name="name">returns.report.form</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Stock Move Line Data">
                        <field name="product_id"/>
                        <field name="lot_id"/>
                        <field name="qty_done"/>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                    </group>
                    <group string="Return Details">
                        <field name="return_reason"/>
                        <field name="approved_by"/>
                        <field name="is_processed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_returns_report" model="ir.actions.act_window">
        <field name="name">Returns Reports</field>
        <field name="res_model">returns.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_returns_report_root" name="Returns Reports" sequence="10"/>
    <menuitem id="menu_returns_report" name="Reports"
              parent="menu_returns_report_root"
              action="action_returns_report"/>
</odoo>
