<odoo>
    <record id="view_returns_report_tree" model="ir.ui.view">
        <field name="name">returns.report.tree</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <tree string="Returns Report">
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="quantity"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="return_reason"/>
                <field name="approved_by"/>
                <field name="is_processed"/>
            </tree>
        </field>
    </record>

    <record id="view_returns_report_form" model="ir.ui.view">
        <field name="name">returns.report.form</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <form string="Returns Report">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="lot_id"/>
                        <field name="quantity"/>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                    </group>
                    <group>
                        <field name="return_reason"/>
                        <field name="approved_by"/>
                        <field name="is_processed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_returns_report_root" name="Returns Report" sequence="10"/>
    <menuitem id="menu_returns_report" name="Reports" parent="menu_returns_report_root" sequence="10"/>

    <record id="action_returns_report" model="ir.actions.act_window">
        <field name="name">Returns Report</field>
        <field name="res_model">returns.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_action_returns_report"
              name="Returns Report"
              parent="menu_returns_report"
              action="action_returns_report"
              sequence="20"/>
</odoo>
