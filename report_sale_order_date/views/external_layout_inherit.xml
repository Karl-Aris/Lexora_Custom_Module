<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_standard_inherit_sale_order_date" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('header')]/div[2]" position="inside">
            <!-- Look for sale order -->
            <t t-set="sale_order" t-value="False"/>
            <t t-if="o._name == 'sale.order'">
                <t t-set="sale_order" t-value="o"/>
            </t>
            <t t-elif="o._name == 'account.move' and o.invoice_origin">
                <t t-set="sale_order" t-value="env['sale.order'].search([('name', '=', o.invoice_origin)], limit=1)"/>
            </t>

            <!-- Display sale_order.date_order -->
            <p t-if="sale_order and sale_order.date_order">
                <strong>Order Date:</strong>
                <t t-esc="sale_order.date_order.strftime('%B %d, %Y')"/>
            </p>
        </xpath>
    </template>
</odoo>
