<odoo>

    <!-- Kits List -->
    <!-- Kits List -->
    <template id="kits_list_template" name="Kits List">
        <t t-call="website.layout">
            <div class="container mt-4 mb-4">
                <h1>Product Kits</h1>

                <t t-if="grouped_kits">
                    <ul class="list-unstyled">
                        <t t-foreach="grouped_kits.items()" t-as="item">
                            <t t-set="group_key" t-value="item[0]" />
                            <t t-set="kits" t-value="item[1]" />
                            <li>
                                <a
                                    t-att-href="'/product_kits/group?collection=%s&amp;size=%s' % (group_key[0] or '', group_key[1] or '')">
                                    <strong>
                                        <t t-esc="group_key[0] or 'No Collection'" />
                                    </strong>
                                    / <t t-esc="group_key[1] or 'No Size'" /> (<t t-esc="len(kits)" />
                                    items) </a>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-else="">
                    <p>
                        <strong>No kits found.</strong>
                    </p>
                </t>
            </div>
        </t>
    </template>


<template id="all_products_template" name="All Products">
    <t t-call="website.layout">
        <div class="container mt-4 mb-4">
            <h1>All Products</h1>

            <t t-if="products">
                <div class="row">
                    <t t-foreach="products" t-as="product">
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card p-2 border h-100">

                                <!-- ✅ Optimized Image via Odoo route -->
                                <img t-att-src="'/web/image/product.template/%s/image_1920' % product.product_tmpl_id.id"
                                     class="card-img-top mb-2"
                                     alt="Product Image"/>

                                <h4>
                                    <t t-esc="product.name" />
                                </h4>
                                <p>
                                    <t t-esc="product.default_code or 'No Code'" />
                                </p>
                                <p>
                                    <strong>Price:</strong>
                                    <t t-esc="product.list_price or 'N/A'" />
                                </p>
                                <p>
                                    <strong>ID:</strong>
                                    <t t-esc="product.id" />
                                </p>

                                <!-- ✅ Tags -->
                                <p>
                                    <strong>Tags:</strong>
                                    <t t-if="product.product_tmpl_id and product.product_tmpl_id.product_tag_ids">
                                        <t t-foreach="product.product_tmpl_id.product_tag_ids" t-as="tag">
                                            <span class="badge bg-secondary me-1">
                                                <t t-esc="tag.name" />
                                            </span>
                                        </t>
                                    </t>
                                    <t t-else="">No Tags</t>
                                </p>

                            </div>
                        </div>
                    </t>
                </div>
            </t>
            <t t-else="">
                <p>No products found.</p>
            </t>
        </div>
    </t>
</template>





</odoo>