<odoo>
    <record id="view_company_form_inventory_scan" model="ir.ui.view">
        <field name="name">res.company.form.inventory.scan</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='configuration']" position="inside">
                <field name="inventory_scan_mode"/>
            </xpath>
        </field>
    </record>
</odoo>
