<odoo>
    <record id="group_inventory_scan" model="res.groups">
        <field name="name">Allow Inventory Adjustment (During Scan Only)</field>
        <field name="category_id" ref="base.module_category_inventory"/>
    </record>

    <record id="inventory_adjustment_rule" model="ir.rule">
        <field name="name">Restrict Inventory Adjustment</field>
        <field name="model_id" ref="stock.model_stock_quant"/>
        <field name="domain_force">[(1, '=', 0)]</field>
        <field name="groups" eval="[(4, ref('inventory_adjustment_restrict.group_inventory_scan'))]"/>
    </record>

</odoo>
