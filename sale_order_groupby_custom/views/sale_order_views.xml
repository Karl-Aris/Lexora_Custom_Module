<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_tree_inherit_custom_favorites" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.custom.favorites</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">

                <!-- Parent Group: Open Orders -->
                <separator string="Open Orders"/>
                <filter domain="[('state', '=', 'draft')]" name="filter_draft" string="Quotation"/>
                <filter domain="[('order_state', '=', 'po')]" name="filter_ready_to_pick" string="Ready to be Picked"/>
                <filter domain="[('order_state', '=', 'backorder')]" name="filter_backorders" string="Backorders"/>
                <filter domain="[('invoice_status', '=', 'to invoice')]" name="filter_to_invoice" string="To Invoice"/>

                <!-- Parent Group: Shipped -->
                <separator string="Shipped"/>
                <filter domain="[('order_state', 'in', ['ship'])]" name="filter_shipped" string="Shipped"/>
                <filter domain="[('order_state', 'in', ['return_initiated','returned'])]" name="filter_returned" string="Returned"/>
                <filter domain="[('order_state', '=', 'cancel')]" name="filter_cancelled" string="Cancelled"/>

            </xpath>
        </field>
    </record>
</odoo>
