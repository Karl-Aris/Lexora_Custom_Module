<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_filter_inherit_groupby" model="ir.ui.view">
        <field name="name">sale.order.search.groupby.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter name="group_by_effective_date" string="Shipped Date" context="{'group_by': 'effective_date'}"/>
                <filter name="group_by_order_process_date" string="Process Date" context="{'group_by': 'order_process_date'}"/>
                <filter name="group_by_cancel_date" string="Cancel Date" context="{'group_by': 'cancel_date'}"/>
            </xpath>
        </field>
    </record>
</odoo>
