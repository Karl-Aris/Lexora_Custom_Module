<odoo>
    <record id="view_mail_message_form_inherit_bcc" model="ir.ui.view">
        <field name="name">mail.message.form.inherit.bcc</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_mail_message_form"/>
        <field name="arch" type="xml">
            <!-- Add BCC display below Recipients -->
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="bcc_partner_ids" widget="many2many_tags" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
