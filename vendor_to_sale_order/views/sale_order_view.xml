<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.bill</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_vendor_bill"
                        type="object"
                        string="Create Vendor Bill"
                        icon="fa-cube"
                        class="btn-primary"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(account.action_move_in_invoice_type)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-cube"
                        string="Vendor Bills">
                    <field name="vendor_bill_count" widget="statinfo"/>
                </button>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <field name="vendor_bill_ids" context="{'default_move_type': 'in_invoice'}">
                    <tree editable="bottom">
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="ref"/>
                        <field name="x_po_vb_id"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
