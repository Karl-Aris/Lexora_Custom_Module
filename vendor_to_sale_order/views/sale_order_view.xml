<odoo>
  <record id="view_sale_order_form_inherit_vendor_bill_button" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.vendor.bill.button</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- Stat Button inside button_box -->
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="action_open_vendor_bills"
                type="object"
                icon="fa-file-invoice-dollar"
                class="oe_stat_button"
                attrs="{'invisible': [('vendor_bill_count', '=', 0)]}">
          <field name="vendor_bill_count" widget="statinfo" string="Vendor Bills"/>
        </button>
      </xpath>

    </field>
  </record>
</odoo>
