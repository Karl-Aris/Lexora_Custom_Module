<odoo>
    <record id="view_vendor_bill_wizard_form" model="ir.ui.view">
        <field name="name">vendor.bill.wizard.form</field>
        <field name="model">vendor.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Vendor Bill">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="x_po_vb_id"/>
                </group>
                <footer>
                    <button string="Create" type="object" name="action_create_vendor_bill" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
