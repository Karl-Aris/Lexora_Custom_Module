<!-- vendor_to_sale_order/views/sale_order_vendor_bill_button.xml -->
<odoo>
    <record id="sale_order_vendor_bill_smart_button" model="ir.ui.view">
        <field name="name">sale.order.vendor.bill.smart.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_vendor_bills_by_sale_order)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-file-invoice-dollar">
                    <field name="vendor_bill_count" widget="statinfo" string="Vendor Bills"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
