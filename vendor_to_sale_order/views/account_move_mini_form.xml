        <field name="model">account.move</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Vendor Bill">
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="partner_id"/>
