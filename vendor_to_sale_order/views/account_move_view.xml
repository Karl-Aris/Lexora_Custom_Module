<odoo>
    <record id="view_account_move_form_inherit_sale_order_button" model="ir.ui.view">
        <field name="name">account.move.sale.order.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_related_sale_order"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        string="Sale Order"
                        invisible="1">
                    <field name="sale_order_count" widget="statinfo"/>
                </button>
                <xpath expr="." position="after">
                    <script type="text/javascript">
                        odoo.define('vendor_to_sale_order.account_move_button_visibility', function (require) {
                            const { onWillStart, useRef, useState } = owl;
                            const { Component } = owl;
                            const viewRegistry = require('web.view_registry');
                            const FormView = require('web.FormView');

                            // This script is optional if you're customizing visibility in JS instead.
                        });
                    </script>
                </xpath>
            </xpath>
        </field>
    </record>
</odoo>
