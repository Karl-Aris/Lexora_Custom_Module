<odoo>
    <record id="view_account_move_form_inherit_sale_order_button" model="ir.ui.view">
        <field name="name">account.move.sale.order.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- Include the field so it's usable in attrs -->
                <field name="sale_order_id" invisible="1"/>
                
                <button name="action_view_related_sale_order"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        attrs="{'invisible': [('sale_order_id', '=', False)]}">
                    <field name="sale_order_count" widget="statinfo" string="Sale Order"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
