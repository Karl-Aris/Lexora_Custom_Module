<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_order_form_inherit_vendor_tab" model="ir.ui.view">
    <field name="name">sale.order.form.vendor.tab</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='order_lines']" position="after">
        <page name="vendor_bills" string="Vendor Bills">
          <field name="vendor_bill_ids" context="{'default_company_id': company_id, 'default_x_sale_order_id': active_id}">
            <tree>
              <field name="name"/>
              <field name="date"/>
              <field name="amount_total"/>
              <field name="state"/>
            </tree>
            <form string="Vendor Bill">
              <sheet>
                <group>
                  <field name="name"/>
                  <field name="move_type" readonly="1"/>
                  <field name="partner_id"/>
                  <field name="invoice_date"/>
                  <field name="amount_total" readonly="1"/>
                  <field name="state"/>
                  <field name="company_id"/>
                </group>
              </sheet>
            </form>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
