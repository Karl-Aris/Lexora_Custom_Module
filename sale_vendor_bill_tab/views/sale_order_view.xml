<odoo>
    <record id="view_order_form_inherit_vendor_tab" model="ir.ui.view">
        <field name="name">sale.order.form.vendor.tab</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='unbuild']" position="after">
                <page name="vendor_bills_tab" string="Vendor Bills">
                    <field name="vendor_bill_ids">
                        <tree>
                            <field name="name"/>
                            <field name="invoice_date"/>
                            <field name="partner_id"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>