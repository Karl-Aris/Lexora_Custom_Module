<odoo>
  <record id="view_order_form_inherit_vendor_tab" model="ir.ui.view">
    <field name="name">sale.order.form.vendor.tab</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <!-- Use order_lines page as fallback -->
      <xpath expr="//page[@name='order_lines']" position="after">
        <page name="vendor_bills" string="Vendor Bills">
          <field name="vendor_bill_ids">
            <tree editable="bottom">
              <field name="name"/>
              <field name="date"/>
              <field name="amount_total"/>
              <field name="state"/>
              <field name="company_id"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
