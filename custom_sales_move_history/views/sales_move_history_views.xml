<odoo>
    <!-- Custom Tree View -->
    <record id="view_stock_move_sales_menu_tree" model="ir.ui.view">
        <field name="name">stock.move.sales.menu.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree string="Sales Move History">
                <field name="date"/>
                <field name="reference"/>
                <field name="product_id"/>
                <field name="location_id" string="From"/>
                <field name="location_dest_id" string="To"/>
                <field name="product_uom_qty" string="Quantity"/>
                <field name="product_uom" string="Unit"/>
                <field name="price_unit" string="Cost"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>

    <!-- Custom Action -->
    <record id="action_stock_move_sales_menu" model="ir.actions.act_window">
        <field name="name">Sales Move History</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_stock_move_sales_menu_tree"/>
        <field name="domain">[('sale_line_id.order_id','!=',False)]</field>
    </record>

    <!-- Custom Menu -->
    <menuitem id="menu_sales_move_history"
              name="Returns Report"
              parent="sale.menu_sale_root"
              action="action_stock_move_sales_menu"
              sequence="20"/>
</odoo>
