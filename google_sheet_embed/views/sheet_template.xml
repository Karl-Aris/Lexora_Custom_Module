<odoo>
    <record id="view_form_x_report_embed" model="ir.ui.view">
        <field name="name">x.report.embed.form</field>
        <field name="model">x_report</field>
        <field name="arch" type="xml">
            <form string="Embedded Google Sheet">
                <sheet>
                    <group>
                        <field name="x_name"/>
                    </group>
                    <group>
                        <!-- This will properly render the HTML iframe -->
                        <field name="x_studio_embedded_google_sheet" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
