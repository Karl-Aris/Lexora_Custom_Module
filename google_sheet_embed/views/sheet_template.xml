<odoo>
    <record id="view_form_x_report_embed" model="ir.ui.view">
        <field name="name">x.report.embed.form</field>
        <field name="model">x_report</field>
        <field name="arch" type="xml">
            <form string="Embedded Google Sheet">
                <sheet>
                    <group>
                        <field name="x_name"/>
                        <field name="x_studio_embedded_google_sheet" invisible="1"/>
                    </group>

                    <!-- Important: This should NOT be inside <group> -->
                    <div type="html"
                         t-if="record.x_studio_embedded_google_sheet.raw_value"
                         t-raw="record.x_studio_embedded_google_sheet.raw_value"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
