<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <templates id="template" xml:space="preserve">
        <t t-name="sale_order_favorites_grouping.FavoriteMenuDialog"
           t-inherit="web.FavoriteMenuDialog"
           t-inherit-mode="extension">

            <xpath expr="//div[@class='o_dialog_content']/div[1]" position="after">
                <div class="o_row mt-2">
                    <label for="group_name" class="me-2">Group Name</label>
                    <select id="group_name"
                            class="form-select"
                            t-model="state.group_name">
                        <option value="">-- Select a group --</option>
                        <t t-foreach="groupOptions" t-as="option">
                            <option t-att-value="option"
                                    t-att-selected="state.group_name === option ? 'selected' : false">
                                <t t-esc="option"/>
                            </option>
                        </t>
                    </select>
                </div>
            </xpath>

        </t>
    </templates>
</odoo>