<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cron_import_shopify_orders" model="ir.cron">
        <field name="name">Import shopify orders</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_sale_order"/>
        <field name="code">model.cron_import_shopify_orders()</field>
        <field name="state">code</field>
        <field name="active" eval="False"/>
    </record>
    <record id="cron_update_shopify_draft_orders" model="ir.cron">
        <field name="name">Update shopify Draft Orders</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_sale_order"/>
        <field name="code">model.cron_shopify_draft_orders_update()</field>
        <field name="state">code</field>
        <field name="active" eval="False"/>
    </record>
    <record id="cron_import_shopify_customers" model="ir.cron">
        <field name="name">Import shopify customers</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_sale_order"/>
        <field name="code">model.cron_import_shopify_customers()</field>
        <field name="state">code</field>
        <field name="active" eval="False"/>
    </record>
    <record id="cron_export_shopify_inventory" model="ir.cron">
        <field name="name">Export shopify inventory</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_product_template"/>
        <field name="code">model.cron_export_product_inventory()</field>
        <field name="state">code</field>
        <field name="active" eval="False"/>
    </record>
    <record id="cron_remove_inventory_export_log" model="ir.cron">
        <field name="name">Remove Shopify Inventory Export Log</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_shopify_export_inventory_data"/>
        <field name="code">model.cron_remove_inventory_export_data_log()</field>
        <field name="state">code</field>
        <field name="active" eval="True"/>
    </record>    
</odoo>
