<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view"
			id="lexor_sale_order_importation_template_form_view">
			<field name="name">lexora.so.import.template.form</field>
			<field name="model">lexora.so.import.template</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<group>
							<field name="name" />
							<field name="key" />
						</group>
						<group>
							<field name="mode" />
							<field name="data_row_start"/>
						</group>
					</group>
						<field name="template_data_ids" nolabel="1">
							<tree editable="bottom">
								<field name="data_id"/>
								<field name="sequence" widget='handle'/>
                                <field name="required"/>
							</tree>						
						</field>


				</form>
			</field>
		</record>


		<record id="lexora_sale_order_importation_template_tree_view"
			model="ir.ui.view">
			<field name="name">lexora.sale.order.imporatiton.template.view</field>
			<field name="model">lexora.so.import.template</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="key" />
					<field name="mode" />
					<field name="data_row_start"/>
					<!-- <field name="template_data_ids"/> -->
				</tree>
			</field>
		</record>

		<record id="lexora_sale_order_importation_template_action"
			model="ir.actions.act_window">
			<field name="name">Sale Order Importation Template</field>
			<field name="res_model">lexora.so.import.template</field>
			<field name="view_mode">tree,form</field>
		</record>
