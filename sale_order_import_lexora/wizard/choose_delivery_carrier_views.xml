<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="choose_delivery_carrier_view_form_mode_freight" model="ir.ui.view">
       <field name="name">choose.delivery.carrier.form.view.mode.freight</field>
       <field name="model">choose.delivery.carrier</field>
       <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form"/>
       <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
               <field name="mode_freight"/>
               <!-- <field name="display_price" invisible="1"/> -->
            </xpath>

            <xpath expr="//label[@for='display_price']" position="replace">
            </xpath>
            <xpath expr="//field[@name='display_price']" position="replace">
            </xpath>
            <xpath expr="//button[@name='update_price']" position="replace">
            </xpath>
            <xpath expr="//footer" position="before">
               <hr/>
               <div class="alert alert-info text-center" role="alert">
                  If tracking has been already arranged, please input additional details and documents related to shipment.
               </div>
               <group col="3">
                  <group colspan="1" string="Tracking Details">
                     <field name="carrier_tracking_ref"/>
                     <field name="dimension"/>
                  </group>
                  <group colspan="2" string="Attachments/ BoL">
                     <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                  </group>
               </group>
            </xpath>
       </field>
   </record>
</odoo>