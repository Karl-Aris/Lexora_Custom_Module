<odoo>
    <menuitem id="menu_return_report_root" name="Return Report" sequence="10"/>
    
    <menuitem id="menu_return_report" name="Reports"
              parent="menu_return_report_root" sequence="20"/>

    <record id="action_return_report" model="ir.actions.act_window">
        <field name="name">Return Reports</field>
        <field name="res_model">return.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_return_report_action"
              name="Return Reports"
              parent="menu_return_report"
              action="action_return_report"
              sequence="30"/>

    <!-- Action -->
    <record id="action_return_report" model="ir.actions.act_window">
        <field name="name">Return Reports</field>
        <field name="res_model">return.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first return report
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_return_report_tree" model="ir.ui.view">
        <field name="name">return.report.tree</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_return_report_form" model="ir.ui.view">
        <field name="name">return.report.form</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="customer_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
