<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_return_report_form" model="ir.ui.view">
        <field name="name">return.report.form</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <form string="Return Report">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- You can add smart buttons here later -->
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="state" widget="statusbar"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Return Details">
                            <group>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="reason"/>
                            </group>
                        </page>

                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_return_report_tree" model="ir.ui.view">
        <field name="name">return.report.tree</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
