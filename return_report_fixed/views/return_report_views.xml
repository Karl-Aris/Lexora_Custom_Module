<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_return_report_tree" model="ir.ui.view">
        <field name="name">return.report.tree</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <tree string="Return Reports">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_return_report_form" model="ir.ui.view">
        <field name="name">return.report.form</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <form string="Return Report">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" icon="fa-undo"
                                name="action_confirm" attrs="{'invisible': [('state','!=','draft')]}">
                            <field name="state" widget="statusbar" invisible="1"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Return Lines">
                            <field name="return_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_return_report" model="ir.actions.act_window">
        <field name="name">Return Reports</field>
        <field name="res_model">return.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_return_report_root"
              name="Return Reports"
              parent="base.menu_custom"
              sequence="10"/>
    <menuitem id="menu_return_report"
              name="Reports"
              parent="menu_return_report_root"
              action="action_return_report"
              sequence="20"/>
</odoo>
