<odoo>
    <record id="view_helpdesk_ticket_rtv_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.rtv</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_return_to_vendor"
                        type="object"
                        string="Return to Vendor"
                        class="btn-primary"
                        attrs="{'invisible': [('picking_id', '=', False)]}"/>
            </header>
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="RTV Info">
                    <group>
                        <field name="merchant"/>
                        <field name="sku"/>
                        <field name="purchase_order_id"/>
                        <field name="picking_id"/>
                        <field name="tracking_bol"/>
                        <field name="carrier"/>
                        <field name="return_amount"/>
                        <field name="currency_id"/>
                        <field name="condition_reported"/>
                        <field name="sign_bol"/>
                        <field name="initials"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
