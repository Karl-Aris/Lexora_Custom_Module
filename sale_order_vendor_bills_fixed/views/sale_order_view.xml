<odoo>
    <record id="view_order_form_inherit_vendor_bills" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendor.bills</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Vendor Bills">
                    <field name="vendor_bill_ids" readonly="1">
                        <tree string="Vendor Bills" editable="bottom">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
