            </p>
        </field>
    </record> -->

    <record id="action_deduction_vendor" model="ir.actions.act_window">
        <field name="name">Deductions</field>
        <field name="res_model">deduction.vendor</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[  
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_deduction_vendor_tree')}),  
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_deduction_vendor_form')})
        ]"/>
        <field name="search_view_id" ref="view_deduction_vendor_search"/>
    </record>

