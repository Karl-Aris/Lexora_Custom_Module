
<odoo>
    <template id="shipping_details_inherit" inherit_id="website_sale_lexora.shipping-details" priority="99">
        <xpath expr="//form//div[last()]" position="before">
            <div id="div_id_purchase_order" t-attf-class="div_name col-lg-6 mb-2 #{'o_has_error' if error.get('purchase_order') else ''}">
                <label class="col-form-label fw-bold" for="purchase_order">PO #</label>
                <input type="text"
                       id="id_purchase_order"
                       name="purchase_order"
                       t-attf-class="website-custom-field form-control #{'is-invalid' if error.get('purchase_order') else ''}"
                       t-att-value="purchase_order or request.params.get('purchase_order') or ''"/>
                <t t-if="error.get('purchase_order')">
                    <div class="invalid-feedback d-block">
                        <t t-esc="error.get('purchase_order')"/>
                    </div>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
