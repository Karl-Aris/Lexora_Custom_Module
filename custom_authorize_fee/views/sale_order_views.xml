<odoo>
    <record id="view_order_form_inherit_fee" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.fee</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="authorize_fee" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
