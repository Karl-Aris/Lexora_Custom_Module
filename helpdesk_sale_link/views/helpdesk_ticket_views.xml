<odoo>
    <record id="view_helpdesk_ticket_form_inherit_sale_link" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.sale.link</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <field name="x_matched_sale_order_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
            </xpath>
            <xpath expr="//form/header" position="inside">
                <button
                    name="%(helpdesk_sale_link.action_helpdesk_matched_sale_orders)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-shopping-cart"
                    >
                    <field name="x_x_matched_sale_order_ids_helpdesk_ticket_count" widget="statinfo"/>
                    <span>Matched SO</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
