<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="authnet_fee_portal_note" inherit_id="portal.portal_payment_status">
        <xpath expr="//div[@id='wrap']//div[contains(@class, 'o_portal_payment_status')]" position="inside">
            <t t-if="'authorize_net' in tx.provider_id.code">
                <p style="margin-top: 1rem;">
                    <strong>Note:</strong>
                    An Authorize.Net surcharge has been added. This order is not yet paid.
                </p>
            </t>
        </xpath>
    </template>
</odoo>
