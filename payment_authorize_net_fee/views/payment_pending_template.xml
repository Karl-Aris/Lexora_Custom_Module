<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="authnet_fee_portal_note" inherit_id="payment.payment_receipt_status">
        <xpath expr="//div[@id='wrap']//div[contains(@class, 'o_portal_payment_status')]" position="inside">
            <t t-if="tx and tx.provider_id.code == 'authorize_net' and not tx.is_processed">
                <p style="margin-top: 1rem;">
                    <strong>Note:</strong>
                    An Authorize.Net surcharge has been added. This order is <strong>not yet paid</strong>.
                </p>
            </t>
        </xpath>
    </template>
</odoo>
