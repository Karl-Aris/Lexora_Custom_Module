<odoo>
    <template id="shipping-details" name="Shipping Details">
        <t t-name="website_sale_lexora.shipping-details">
            <t t-set="no_footer" t-value="1"/>
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_website_sale o_wsale_address_fill container py-2">
                        <div class="row">
                            <div class="col-12">
                                <t t-call="website.step_wizard">
                                    <t t-set="wizard_step" t-value="website._get_checkout_steps()"/>
                                </t>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 card">
                                <br/>
                                <h4>Shipping Details</h4>
                                <hr class="p-0 m-0 pb-2"/>
                                <t t-if="error" t-foreach="error.get('error_message', [])" t-as="err">
                                    <h5 class="text-danger" t-esc="err"/>
                                </t>
                                <form action="/shop/shipping-details/confirm" method="post" id="id_shipping_details_form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" t-nocache="The csrf token must always be up to date."/>
                                    <div class="row">
                                        <div id="div_id_purchase_order" t-attf-class="div_name col-lg-6 mb-2 #{'o_has_error' if error.get('purchase_order') else ''}">
                                            <label class="col-form-label fw-bold" for="purchase_order">PO #</label>
                                            <input type="text"
                                                id="id_purchase_order"
                                                name="purchase_order"
                                                t-attf-class="website-custom-field form-control #{'is-invalid' if error.get('purchase_order') else ''}"
                                                t-att-value="purchase_order or request.params.get('purchase_order') or ''"/>
                                            <t t-if="error.get('purchase_order')">
                                                <div class="invalid-feedback d-block">
                                                    <t t-esc="error.get('purchase_order')"/>
                                                </div>
                                            </t>
                                        </div>
                                        <div id="div_id_order_customer" t-attf-class="#{error.get('order_customer') and 'o_has_error'} div_name col-lg-6 mb-2">
                                            <label class="col-form-label fw-bold" for="order_customer">Customer Name</label>
                                            <input type="text" id="id_order_customer" name="order_customer" autofocus="1" t-attf-class="website-custom-field form-control #{error.get('order_customer') and 'is-invalid' or ''}"/>
                                            <span class="website-custom-label-required d-none"><i><small>This field is required</small></i></span>
                                        </div>
                                        <div id="div_id_order_phone" t-attf-class="#{error.get('order_phone') and 'o_has_error'} div_name col-lg-6 mb-2">
                                            <label class="col-form-label fw-bold" for="order_phone">Customer Contact</label>
                                            <input type="text" id="id_order_phone" name="order_phone" t-attf-class="website-custom-field form-control #{error.get('order_phone') and 'is-invalid' or ''}"/>
                                            <span class="website-custom-label-required d-none"><i><small>This field is required</small></i></span>
                                        </div>
                                        <div id="div_id_order_address" t-attf-class="#{error.get('order_address') and 'o_has_error'} div_name col-lg-12 mb-2">
                                            <label class="col-form-label fw-bold" for="order_address">Customer Address</label>
                                            <input type="text" id="id_order_address" name="order_address" t-attf-class="website-custom-field form-control #{error.get('order_address') and 'is-invalid' or ''}"/>
                                            <span class="website-custom-label-required d-none"><i><small>This field is required</small></i></span>
                                        </div>
                                        <br/>
                                        <div>
                                            <button type="submit" id="id_btn_shipping_details" class="btn btn-primary w-100 w-md-auto order-1 order-md-3">
                                                Proceed
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <br/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
