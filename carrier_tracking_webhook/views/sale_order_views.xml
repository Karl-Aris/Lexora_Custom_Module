<odoo>
    <record id="view_order_form_inherit_webhook_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.webhook.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="Shipment Tracking">
                    <field name="tracking_number" readonly="1"/>
                    <field name="tracking_status" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
