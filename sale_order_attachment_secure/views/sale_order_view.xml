<odoo>
    <record id="view_order_form_inherit_attachment_selection_inline" model="ir.ui.view">
        <field name="name">sale.order.form.attachment.selection.inline</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[.//field[@name='message_ids']]" position="inside">
                <group string="Attachment Selection">
                    <field name="attachment_selection_line_ids">
                        <tree editable="bottom">
                            <field name="selected"/>
                            <field name="name" readonly="1"/>
                        </tree>
                    </field>
                    <button name="action_download_selected_attachments"
                            type="object"
                            string="Download Selected Attachments"
                            class="btn btn-primary"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
